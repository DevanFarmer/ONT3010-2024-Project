@model IEnumerable<FaultSubsystem.Models.FridgeRequestModels.ViewCustomerFridgeRequests>

@if (Model.Count() > 0)
{
    <div class="mb-4" style="margin: 5px;">
        <a href="@Url.Action("Dashboard", "Customer")" class="btn btn-secondary" style="color: white;">
            <img src="~/icons/arrow-left-square.svg" alt="Back" />
        </a>
    </div>


    <div class="title-parent">
        <h2 class="mb-4 text-center title-header">
            <strong>Your Unhandled Fridge Requests</strong>
        </h2>
    </div>

    <div class="table-responsive">
        <table class="view-table table-bordered table-striped table-hover">
            <thead class="view-table-header">
                <tr>
                    <th>Fridge Model</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr>
                        <td>@request.FridgeModel</td>
                        <td>@(request.Handled ? "Handled" : "Not Handled")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div style="text-align: center;">
        <h2 style="margin: 5px;">Your have no Fridge Requests at the moment</h2>
        <a href="@Url.Action("Dashboard", "Customer")" class="btn btn-info">
            <img src="~/icons/arrow-left-square.svg" alt="Back" />
        </a>
    </div>
}