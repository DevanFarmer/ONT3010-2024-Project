@model FaultSubsystem.Models.FridgeRequestModels.AssignFridgeViewModel

<div class="form-parent">
    <div class="form-container">
        <h2>Assign Fridge to Request</h2>

        <form asp-action="AssignFridge" method="post">
            <input type="hidden" asp-for="FridgeRequestID" />

            <div class="form-group">
                <label asp-for="FridgeModel">Fridge Model Requested</label>
                <input type="text" asp-for="FridgeModel" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="AvailableFridges">Select Available Fridge</label>
                <select asp-for="SelectedFridgeID" asp-items="Model.AvailableFridges" class="form-control">
                    <option value="">-- Select a Fridge --</option>
                </select>
                <span asp-validation-for="SelectedFridgeID" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Assign Fridge</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}