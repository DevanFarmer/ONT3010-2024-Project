@using FaultSubsystem.Models.Account;
@model LoginViewModel;

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="login-container">
    <h1>Login</h1>
    <form asp-action="Login" method="post" class="login-form">
        <div>
            <label>Email</label>
            <input type="email" asp-for="Email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <label>Password</label>
            <input type="password" asp-for="Password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit">Log In</button>
        <div style="padding-top: 10px">
            <a asp-controller="Account" asp-action="CreateAccount">Create an Account</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}