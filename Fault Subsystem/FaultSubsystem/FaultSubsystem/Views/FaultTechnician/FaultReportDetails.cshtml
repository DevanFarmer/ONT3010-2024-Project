@model FaultSubsystem.Models.Fault.FaultReportDetailsViewModel

@if (Model.FaultStatus == "Resolved")
{
    <a href="@Url.Action("ViewFaultReportsHistory", "FaultTechnician")" class="btn btn-secondary" style="margin: 5px;">
        <img src="~/icons/arrow-left-square.svg" alt="Back" />
    </a>
}
else
{
    <a href="@Url.Action("ViewAssignedFaultReports", "FaultTechnician")" class="btn btn-secondary" style="margin: 5px;">
        <img src="~/icons/arrow-left-square.svg" alt="Back" />
    </a>
}

<div class="title-parent">
    <h2 class="mb-4 text-center title-header">
        <strong>Fault Report Details</strong>
    </h2>
</div>

<div class="container">
    <div class="row d-flex align-items-stretch">
        <!-- Customer Information Given -->
        <div class="col-md-6 d-flex">
            <div class="card mb-4 flex-fill">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><strong>Customer Information Given</strong></h4>
                </div>
                <div class="card-body">
                    <p><strong>Fault Description:</strong> @Model.FaultDescription</p>
                    <p><strong>Report Date:</strong> @Model.ReportDate</p>
                </div>
            </div>
        </div>
        <!-- Fault Details -->
        <div class="col-md-6 d-flex">
            <div class="card mb-4 flex-fill">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0"><strong>Fault Details</strong></h4>
                </div>
                <div class="card-body">
                    <p><strong>Diagnosis:</strong> @Model.Diagnosis</p>
                    <p><strong>Fault Status:</strong> @Model.FaultStatus</p>
                    <p><strong>Notes:</strong> @Model.Notes</p>
                    <p><strong>Scheduled Repair Date:</strong> @Model.ScheduledRepairDate</p>
                    <p><strong>Resolution Date:</strong> @Model.ResolutionDate</p>
                </div>
            </div>
        </div>
    </div>
        <!-- Fridge Details -->
        <div class="col-md-6 d-flex">
            <div class="card mb-4 flex-fill">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><strong>Fridge Details</strong></h4>
                </div>
                <div class="card-body">
                    <p><strong>Fridge Model:</strong> @Model.FridgeModel</p>
                    <p><strong>Serial Number:</strong> @Model.SerialNumber</p>
                    <p><strong>Date Acquired:</strong> @Model.DateAcquired</p>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model.FaultStatus != "Resolved")
{
    <div class="title-parent">
        <a href="@Url.Action("EditFaultReport", new { id = Model.FaultID })" class="btn btn-primary">
            Edit Fault Report
        </a>
    </div>
    
}