@model IEnumerable<FaultSubsystem.Models.CustomerModels.FaultyFridgesViewModel>


@if (Model.Count() > 0)
{
    <a href="@Url.Action("Dashboard", "Customer")" class="btn btn-secondary" style="margin: 5px;">
        <img src="~/icons/arrow-left-square.svg" alt="Back" />
    </a>
    <div class="title-parent">
        <h2 class="mb-4 text-center title-header">
            <strong>Your Faulty Fridges</strong>
        </h2>
    </div>

    <div class="table-responsive">
        <table class="view-table table-bordered table-striped table-hover">
            <thead class="view-table-header">
                <tr>
                    <th>Fridge Model</th>
                    <th>Serial Number</th>
                    <th>Fault Description</th>
                    <th>Current Fault Status</th>
                    <th>Return Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fridge in Model)
                {
                    <tr>
                        <td>@fridge.FridgeModel</td>
                        <td>@fridge.SerialNumber</td>
                        <td>@fridge.FaultDescription</td>
                        <td>@fridge.FaultStatus</td>
                        <td>@fridge.ReturnDate</td>
                        <td>
                            <a href="@Url.Action("ViewFaultyFridgeDetails", "Customer", new { faultID = fridge.FaultID})" class="btn btn-info">View Details</a>
                            @* Have a button to request a replacement for the fridge here? *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div style="text-align: center;">
        <h2><strong>You don't have any faulty fridges.</strong></h2>
        <br />
        <a href="@Url.Action("Dashboard", "Customer")" class="btn btn-secondary" style="margin: 5px;">
            <img src="~/icons/arrow-left-square.svg" alt="Back" />
        </a>
    </div>
}
