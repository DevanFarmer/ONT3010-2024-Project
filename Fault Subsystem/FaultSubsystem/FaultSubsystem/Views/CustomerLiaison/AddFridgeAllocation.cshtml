@model FaultSubsystem.Models.CustomerLiaison.AddFridgeAllocationViewModel

<h2>Allocate a Fridge</h2>

<form asp-action="AddFridgeAllocation" method="post">
    <div class="form-group">
        <label for="Customer">Customer Name</label>
        <input type="text" id="Customer" class="form-control" value="@Model.CustomerID" readonly />
    </div>

    <div class="form-group">
        <label for="SelectedFridgeID">Select a Fridge</label>
        <select asp-for="SelectedFridgeID" class="form-control" asp-items="Model.AvailableFridges">
            <option value="">-- Select Fridge --</option>
        </select>
        <span asp-validation-for="SelectedFridgeID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Allocate Fridge</button>
    <a href="@Url.Action("ViewCustomerAllocations", "CustomerLiaison", new { customerId = Model.CustomerID})" class="btn btn-primary">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}