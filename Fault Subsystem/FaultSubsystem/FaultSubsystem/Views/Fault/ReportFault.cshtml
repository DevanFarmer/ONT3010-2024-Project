@model FaultSubsystem.Models.Fault.FaultReportModel

<h2>Report Fridge Fault</h2>

<form asp-action="CreateFault" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="FridgeID">Select Fridge</label>
        <select asp-for="AllocationID" class="form-control" asp-items="ViewBag.FridgeList">
            <option value="">-- Select a Fridge --</option>
        </select>
        <span asp-validation-for="AllocationID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="FaultDescription">Fault Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
