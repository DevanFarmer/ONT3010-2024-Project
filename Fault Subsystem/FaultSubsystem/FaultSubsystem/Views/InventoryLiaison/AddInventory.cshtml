@model Inventory

<div class="form-parent">
    <div class="form-container">
        <h2>Add Fridge Model</h2>
        <form asp-action="AddInventory" method="post" class="custom-form">
            <div class="form-group">
                <label>Fridge Model:</label>
                <input asp-for="FridgeModel" />
                <span asp-validation-for="FridgeModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Quantity:</label>
                <input asp-for="Quantity" type="number"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Supplier:</label>
                <select asp-for="SupplierID" asp-items="ViewBag.Suppliers"></select>
                <span asp-validation-for="SupplierID" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
            <a href="@Url.Action("ViewInventory", "InventoryLiaison")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}