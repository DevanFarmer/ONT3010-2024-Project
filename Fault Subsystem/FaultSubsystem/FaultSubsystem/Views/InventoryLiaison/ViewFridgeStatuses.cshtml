@model IEnumerable<FaultSubsystem.Models.InventoryLiaison.FridgeStatusViewModel>

<div class="mb-4" style="margin: 5px;">
    <a href="@Url.Action("Dashboard", "InventoryLiaison")" class="btn btn-secondary" style="color: white;">
        <img src="~/icons/arrow-left-square.svg" alt="Back" />
    </a>
</div>

<div class="title-parent">
    <h2 class="mb-4 text-center title-header">
        <strong>Fridge Statuses</strong>
    </h2>
</div>

<button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("AddFridgeStatus", "InventoryLiaison")'" style="margin: 5px;">Create New Fridge Status</button>

<div class="table-responsive">
    <table class="view-table table-bordered table-striped table-hover">
        <thead class="view-table-header">
            <tr>
                <th>Status Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var status in Model)
            {
                <tr>
                    <td>@status.StatusName</td>
                    <td>
                        <a href="@Url.Action("EditFridgeStatus", new { id = status.FridgeStatusID})" class="btn btn-sm btn-warning">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>