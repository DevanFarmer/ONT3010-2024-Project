@model IEnumerable<FaultSubsystem.Models.InventoryLiaison.FridgeViewModel>

@if (Model.Count() > 0)
{
    <a href="@Url.Action("Dashboard", "InventoryLiaison")" class="btn btn-secondary" style="margin: 5px;">
        <img src="~/icons/arrow-left-square.svg" alt="Back" />
    </a>

    <div class="title-parent">
        <h2 class="mb-4 text-center title-header">
            <strong>Fridges</strong>
        </h2>
    </div>

    <a href="@Url.Action("AddFridge")" class="btn btn-primary" style="margin: 5px;">Add New Fridge</a>

    <div class="table-responsive">
        <table class="view-table table-bordered table-striped table-hover">
            <thead class="view-table-header">
                <tr>
                    <th>Fridge Model</th>
                    <th>Serial Number</th>
                    <th>Status</th>
                    <th>Location</th>
                    <th>Date Acquired</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fridge in Model)
                {
                    <tr>
                        <td>@fridge.FridgeModel</td>
                        <td>@fridge.SerialNumber</td>
                        <td>@fridge.StatusName</td>
                        <td>@fridge.AddressLine1, @fridge.City (@fridge.PostalCode)</td>
                        <td>@fridge.DateAcquired</td>
                        <td>
                            <a href="@Url.Action("EditFridge", new { id = fridge.FridgeID })" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div style="text-align: center;">
        <h2><strong>No Fridge Records. Add some to the system for it to function.</strong></h2>
        <a href="@Url.Action("AddFridge", "InventoryLiaison")" class="btn btn-primary" style="margin: 5px;">
            Add Fridge
        </a>
        <br />
        <a href="@Url.Action("Dashboard", "InventoryLiaison")" class="btn btn-secondary" style="margin: 5px;">
            <img src="~/icons/arrow-left-square.svg" alt="Back" />
        </a>
    </div>
}