@model Supplier
<div class="form-parent">
    <div class="form-container">
        <h2>Add New Supplier</h2>

        <form asp-action="AddSupplier" method="post" class="custom-form">
            <div class="form-group">
                <label asp-for="SupplierName" class="control-label">Supplier:</label>
                <input asp-for="SupplierName" class="form-control" />
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplierPhoneNumber" class="control-label">Phone Number:</label>
                <input asp-for="SupplierPhoneNumber" class="form-control" />
                <span asp-validation-for="SupplierPhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="ViewSuppliers" asp-controller="InventoryLiaison" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}