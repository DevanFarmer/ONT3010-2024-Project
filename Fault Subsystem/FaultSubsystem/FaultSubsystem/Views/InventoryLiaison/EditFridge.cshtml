@model FaultSubsystem.Models.InventoryLiaison.EditFridgeViewModel

<div class="form-parent">
    <div class="form-container">
        <h2>Edit Fridge</h2>

        <form asp-action="EditFridge" method="post" class="custom-form">
            <input type="hidden" asp-for="FridgeID" />

            <div class="form-group">
                <label for="FridgeTypeID"><strong>Fridge Model:</strong></label>
                <select asp-for="FridgeTypeID" asp-items="Model.AvailableFridgeModels" class="form-control"></select>
            </div>

            <div class="form-group">
                <label for="SerialNumber"><strong>Serial Number:</strong></label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="FridgeStatusID"><strong>Status:</strong></label>
                <select asp-for="FridgeStatusID" asp-items="Model.AvailableStatuses" class="form-control"></select>
                <span asp-validation-for="FridgeStatusID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="LocationID"><strong>Location:</strong></label>
                <select asp-for="LocationID" asp-items="Model.AvailableLocations" class="form-control"></select>
                <span asp-validation-for="LocationID" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Save Changes</button>
            <a href="@Url.Action("ViewFridges")" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}