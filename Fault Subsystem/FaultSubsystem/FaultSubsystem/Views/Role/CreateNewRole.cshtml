@model FaultSubsystem.Models.Role

<div class="form-parent">
    <div class="form-container">
        <h2>Create new Role</h2>

        <form asp-action="CreateNewRole" method="post" class="custom-form">
            @Html.AntiForgeryToken() <!-- CSRF protection token -->

            <div class="form-group">
                <label asp-for="RoleName">Role Name:</label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create Role</button>
            <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ViewRoles", "Role")'">Cancel</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}