@model FaultSubsystem.Models.Role

<h2>Create a New Role</h2>

<form asp-action="CreateNewRole" method="post">
    @Html.AntiForgeryToken() <!-- CSRF protection token -->

    <div class="form-group">
        <label asp-for="RoleName">Role Name</label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Role</button>
    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ViewRoles", "Role")'">Cancel</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}