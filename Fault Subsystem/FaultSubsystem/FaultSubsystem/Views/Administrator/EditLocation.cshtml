@model Location

<h2>Edit Location</h2>

<form asp-action="EditLocation" method="post">
    <input type="hidden" asp-for="LocationID" />
    <div class="form-group">
        <label for="AddressLine1">Address Line 1</label>
        <input type="text" asp-for="AddressLine1" class="form-control" />
    </div>
    <div class="form-group">
        <label for="AddressLine2">Address Line 2</label>
        <input type="text" asp-for="AddressLine2" class="form-control" />
    </div>
    <div class="form-group">
        <label for="City">City</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label for="PostalCode">Postal Code</label>
        <input type="text" asp-for="PostalCode" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <button asp-action="ViewLocations" class="btn btn-primary">Back</button>
</form>