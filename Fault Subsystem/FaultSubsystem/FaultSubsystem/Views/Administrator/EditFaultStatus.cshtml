@model FaultStatus

<div class="form-parent">
    <div class="form-container">
        <h2>Edit Fault Status</h2>

        <form asp-action="EditFaultStatus" method="post" class="custom-form">
            <div class="form-group">
                <input type="hidden" asp-for="FaultStatusID" />

                <label asp-for="StatusName" class="control-label"></label>
                <input asp-for="StatusName" class="form-control" />
                <span asp-validation-for="StatusName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="@Url.Action("ViewFaultStatuses")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>