@model FaultStatus

<div class="form-parent">
    <div class="form-container">
        <h2>Add Fault Status</h2>

        <form asp-action="AddFaultStatus" method="post" class="custom-form">
            <div class="form-group">
                <label asp-for="StatusName" class="control-label"><strong>Status Name:</strong></label>
                <input asp-for="StatusName" class="form-control" />
                <span asp-validation-for="StatusName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
            <a href="@Url.Action("ViewFaultStatuses")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}